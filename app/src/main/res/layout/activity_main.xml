<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:loadingviews="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <com.hongxi.androidloadingviews.loadingviews.LoadingView_Pacman
                android:layout_width="72dp"
                android:layout_height="72dp"

                />

            <com.hongxi.androidloadingviews.loadingviews.LoadingView_Pacman
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                loadingviews:pacman_and_peas_color="#ff0000"
                loadingviews:duration="400"
                />

            <com.hongxi.androidloadingviews.loadingviews.LoadingView_Pacman
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                loadingviews:pacman_and_peas_color="#00ff00"
                loadingviews:duration="200"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="更多LoadingViews敬请期待"
                android:textSize="18sp"
                />



            </LinearLayout>
        </ScrollView>


</RelativeLayout>
